@model TransformadoresApp.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="mt-4 d-flex justify-content-start gap-2 mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="card shadow-sm p-4">
    <h2 class="mb-4 text-center"><i class="bi bi-people text-primary"></i> Gestión de Usuarios</h2>

    @if (!Model.Users.Any()) {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle-fill"></i> No hay usuarios registrados.
        </div>
    }
    else {
        <table class="table table-striped align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Rol actual</th>
                    <th class="text-center">Habilitar/Quitar rol</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users) {
                    <tr>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td class="text-center">
                            <form asp-action="AddToRole" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <input type="hidden" name="role" value="Operario" />
                                <button type="submit" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-person-plus"></i> Operario
                                </button>
                            </form>
                            <form asp-action="RemoveFromRole" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <input type="hidden" name="role" value="Operario" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-person-dash"></i> Operario
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1) {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">Anterior</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++) {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
