@model IEnumerable<TransformadoresApp.Models.ProductionOrder>
@{
    ViewData["Title"] = "Papelera de Órdenes de Producción";
}

<div class="mt-4 d-flex justify-content-start gap-2" style="margin-bottom: 15px;">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a Órdenes
    </a>
</div>

<div class="card shadow-sm p-4">
    <h2 class="mb-4 text-center"><i class="bi bi-trash3"></i> Papelera de Órdenes de Producción</h2>

    @if (!Model.Any()) {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox"></i> No hay órdenes en la papelera.
        </div>
    }
    else {
        <table class="table table-striped table-hover mt-3">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Transformador</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-center">Fecha</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td class="text-center">@item.ProductionOrderId</td>
                        <td class="text-center">@item.Product?.Name</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-center">@item.OrderDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center">@item.Status</td>
                        <td class="text-end">
                            <form asp-action="Restore" asp-route-id="@item.ProductionOrderId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restaurar
                                </button>
                            </form>
                            <form asp-action="DeleteConfirmed" asp-route-id="@item.ProductionOrderId" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar definitivamente esta orden?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-x-circle"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
