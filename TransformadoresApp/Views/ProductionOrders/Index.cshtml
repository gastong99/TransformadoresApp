@model TransformadoresApp.ViewModels.ProductionOrderListViewModel

@{
    ViewData["Title"] = "Órdenes de Producción";
    var estadoSel = Context.Request.Query["estado"].ToString();
    var productSel = Context.Request.Query["productId"].ToString();
    var desdeSel = Context.Request.Query["desde"].ToString();
    var hastaSel = Context.Request.Query["hasta"].ToString();
}

<div class="mt-4 d-flex justify-content-start gap-2 mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Panel Principal
    </a>
</div>

<div class="card shadow-sm p-4">
    <h2 class="mb-4 text-center"><i class="bi bi-list-check text-success"></i> Órdenes de Producción</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Orden
        </a>
        <a asp-action="Trash" class="btn btn-outline-secondary">
            <i class="bi bi-trash3"></i> Papelera
        </a>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <label class="form-label"><b>Estado</b></label>
            <select name="estado" class="form-select">
                <option value="">-- Estado --</option>
                <option value="Pendiente" selected="@(estadoSel == "Pendiente")">Pendiente</option>
                <option value="En Proceso" selected="@(estadoSel == "En Proceso")">En Proceso</option>
                <option value="Completada" selected="@(estadoSel == "Completada")">Completada</option>
                <option value="Cancelada" selected="@(estadoSel == "Cancelada")">Cancelada</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label"><b>Transformador</b></label>
            <select name="productId" class="form-select" asp-items="@(ViewData["Products"] as SelectList)">
                <option value="">-- Todos --</option>
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label"><b>Desde</b></label>
            <input type="date" name="desde" value="@desdeSel" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label"><b>Hasta</b></label>
            <input type="date" name="hasta" value="@hastaSel" class="form-control" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel"></i> Aplicar filtros
            </button>
        </div>
    </form>

    @{
        bool filtrosActivos = !string.IsNullOrEmpty(estadoSel) || !string.IsNullOrEmpty(productSel) || !string.IsNullOrEmpty(desdeSel) || !string.IsNullOrEmpty(hastaSel);
    }

    @if (filtrosActivos) {
        <div class="mb-3 text-end"> <a asp-action="Index" class="btn btn-outline-danger"> <i class="bi bi-x-circle"></i> Limpiar filtros </a> </div>
    }

    @if (!Model.Orders.Any()) {
        <div class="alert alert-warning text-center mt-3">
            <i class="bi bi-exclamation-triangle-fill"></i> No se encontraron órdenes con los filtros aplicados.
        </div>
    }
    else {
        <table class="table table-striped table-hover mt-3">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Transformador</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-center">Fecha</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders) {
                    string badgeClass = item.Status switch
                    {
                        TransformadoresApp.Models.ProductionStatus.Pendiente => "bg-warning text-dark",
                        TransformadoresApp.Models.ProductionStatus.EnProceso => "bg-info text-dark",
                        TransformadoresApp.Models.ProductionStatus.Completada => "bg-success",
                        TransformadoresApp.Models.ProductionStatus.Cancelada => "bg-danger",
                        _ => "bg-secondary"
                    };

                    <tr>
                        <td class="text-center">@item.ProductionOrderId</td>
                        <td class="text-center">@item.Product?.Name</td>
                        <td class="text-center">@item.Quantity?.ToString("0.##")</td>
                        <td class="text-center">@item.OrderDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center"><span class="badge @badgeClass">@item.Status.ToString().Replace("EnProceso", "En Proceso")</span></td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.ProductionOrderId" style="color:dimgrey;" class="btn btn-sm btn-outline-warning @(item.Status == TransformadoresApp.Models.ProductionStatus.Completada || item.Status == TransformadoresApp.Models.ProductionStatus.Cancelada ? "disabled" : "")">
                                <i class="bi bi-pencil"></i> Modificar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProductionOrderId" class="btn btn-sm btn-outline-info" style="color:dimgrey;">
                                <i class="bi bi-file-text"></i> Detalles
                            </a>
                            <form asp-action="MoveToTrash" asp-route-id="@item.ProductionOrderId" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que desea mover esta orden a la papelera?');">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-trash"></i> Papelera
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1) {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">Anterior</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++) {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
