@model TransformadoresApp.Models.UnitOfMeasure
@{
    ViewData["Title"] = "Eliminar unidad de medida";
    bool isUsed = ViewBag.IsUsed ?? false;
}

<div class="card shadow-sm p-4 mb-5">
    <h2 class="mb-3 text-danger"><i class="bi bi-trash"></i> Eliminar unidad</h2>

    @if (isUsed) {
        <div class="alert alert-danger">
            <i class="bi bi-x-octagon-fill"></i>
            Esta unidad de medida está en uso por materiales y no se puede eliminar.
        </div>

        <div class="d-flex justify-content-start gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    }
    else {
        <div class="alert alert-danger">
            ¿Está seguro que desea eliminar la unidad "<strong>@Model.Name</strong>"? Esta acción no se puede deshacer.
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="UnitOfMeasureId" />

            <div class="d-flex justify-content-start gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </form>
    }
</div>
