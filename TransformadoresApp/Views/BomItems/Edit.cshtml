@model TransformadoresApp.Models.BomItem
@{
    ViewData["Title"] = "Modificar material de fabricación";
}

<h2 class="mb-3"><i class="bi bi-pencil-square"></i> Modificar material de fabricación para "<strong>@Model.Product?.Name</strong>"</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="BomItemId" />
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label asp-for="MaterialId" class="form-label">Material</label>
        <select asp-for="MaterialId" asp-items="@(ViewData["MaterialId"] as SelectList)" class="form-control" id="materialSelect"></select>
        <span asp-validation-for="MaterialId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Unidad de medida</label>
        <input type="text" id="unitDisplay" class="form-control" readonly placeholder="Seleccione un material" />
    </div>

    <div class="mb-3">
        <label asp-for="QuantityPerUnit" class="form-label">Cantidad por unidad</label>
        <input asp-for="QuantityPerUnit" class="form-control" />
        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
    </div>

    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Guardar modificación
    </button>
</form>

@section Scripts {
    <script>
        const select = document.getElementById('materialSelect');
        const unitDisplay = document.getElementById('unitDisplay');

        async function fetchUnit(id) {
            if (!id) {
                unitDisplay.value = '';
                return;
            }

            try 
            {
                const res = await fetch(`/BomItems/GetUnitOfMeasure?materialId=${id}`);
                if (res.ok) {
                    const data = await res.json();
                    unitDisplay.value = data?.unit ?? '';
                } else {
                    unitDisplay.value = 'No disponible';
                }
            } 
            catch {
                unitDisplay.value = 'Error al cargar';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            if (select && select.value) fetchUnit(select.value);
        });

        select.addEventListener('change', () => fetchUnit(select.value));
    </script>
}




