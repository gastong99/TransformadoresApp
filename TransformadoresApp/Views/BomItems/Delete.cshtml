@model TransformadoresApp.Models.BomItem
@{
    ViewData["Title"] = "Eliminar material de fabricación";
}

<h2 class="mb-3"><i class="bi bi-trash"></i> Eliminar material de fabricación de "<strong>@Model.Product?.Name</strong>"</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle-fill"></i>
    <strong>Atención:</strong> ¿Está seguro que desea eliminar <strong>@Model.Material?.Name</strong> del transformador <strong>@Model.Product?.Name</strong>? Esta acción no se puede deshacer.
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BomItemId" />

    <a asp-controller="Products" asp-action="Details" asp-route-id="@ViewData["ProductId"]" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </button>
</form>
