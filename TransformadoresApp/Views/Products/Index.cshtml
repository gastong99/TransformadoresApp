@model TransformadoresApp.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Transformadores";
    var searchQuery = Context.Request.Query["search"].ToString();
}

<div class="mt-4 d-flex justify-content-start gap-2 mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Panel Principal
    </a>
</div>

<div class="card shadow-sm p-4">
    <h2 class="mb-4 text-center"><i class="bi bi-lightning text-primary"></i> Transformadores</h2>

    <div class="d-flex mb-3 flex-wrap gap-2">
        <a asp-action="Create" class="btn btn-success" style="margin-right: 20px;">
            <i class="bi bi-plus-circle"></i> Nuevo Transformador
        </a>

        @if (User.IsInRole("Administrador")) {
            @using (Html.BeginForm("Import", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="d-flex align-items-center gap-2">
                    <button type="submit" class="btn btn-outline-success">
                        <i class="bi bi-file-earmark-arrow-up"></i> Importar desde Excel
                    </button>
                    <input type="file" name="file" accept=".xlsx" class="form-control form-control-sm" style="max-width:250px; font-size:10px;" required />
                </div>
            }
        }
    </div>

    <div class="searchBar">
        <form method="get" class="row g-2 mb-3">
            <div class="d-flex justify-content-between">
                <input type="text" name="search" value="@searchQuery" class="form-control" style="width:min-content;" placeholder="Ingrese código o nombre..." />
                <button type="submit" class="btn btn-primary w-50" style="margin-left: 15px;">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(searchQuery)) {
        <div class="mb-3 text-end">
            <a asp-action="Index" class="btn btn-outline-danger">
                <i class="bi bi-x-circle"></i> Limpiar búsqueda
            </a>
        </div>
    }

    @if (!Model.Products.Any()) {
        <div class="alert alert-warning text-center mt-3">
            <i class="bi bi-exclamation-triangle-fill"></i> No se encontraron transformadores con los criterios aplicados.
        </div>
    }
    else {
        <table class="table table-striped table-hover mt-3">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">Código</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Potencia (kVA)</th>
                    <th class="text-center">Peso (Kg)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products) {
                    <tr>
                        <td class="text-center">@item.Code</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center">@item.PotenciaKVA</td>
                        <td class="text-center">@item.Peso</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-warning" style="color:dimgrey;">
                                <i class="bi bi-pencil"></i> Modificar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-info" style="color:dimgrey;">
                                <i class="bi bi-file-text"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger" style="color:black;">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1) {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@searchQuery">Anterior</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++) {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@i" asp-route-search="@searchQuery">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@searchQuery">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
