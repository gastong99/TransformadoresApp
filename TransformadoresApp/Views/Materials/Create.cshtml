@model TransformadoresApp.Models.Material
@{
    ViewData["Title"] = "Registrar Nuevo Material";
}

<div class="card shadow-sm p-4">
    <h2 class="mb-4"><i class="bi bi-plus-circle"></i> Registrar Nuevo Material</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col mb-3">
                <label asp-for="Code" class="control-label">Código</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="col mb-3">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="UnitOfMeasureId" class="control-label"></label>
                <select asp-for="UnitOfMeasureId" class="form-control"
                        asp-items="ViewBag.UnitOfMeasureId" required></select>
                <span asp-validation-for="UnitOfMeasureId" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-start gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Guardar material
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
